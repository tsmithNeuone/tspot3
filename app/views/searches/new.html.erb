<%= javascript_include_tag "searches", "data-turbolinks-track" => true %>

<div id="splash_logo_tru" class="splash_logo">
	<%= image_tag("truspot_center_logo_large.png", id: "large_logo")%>
</div>
<div id="center_search_fields">
	<%= form_for(@search) do |f| %>
	<% if @search.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h2>

		<ul>
			<% @search.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div id="category_fields" class="form_fields">
		<%= image_tag("category_label.png", id: "category_label")%>
		<% category_array = [['Restaurants'], ['Bars'], ['Food'], ['Places']]%>
		<%= f.select :category, options_for_select(category_array),{} , :class => "styled_form_element" %>
	</div>
	<div id="near_fields" class="form_fields">
		<%= image_tag("near_label.png", id: "near_label")%>
		<%= f.text_field :address, :class => "styled_form_element"%>
	</div>

	<div class="field">
		<%= f.label :latitude %>
		<br>
		<%= f.text_field :latitude %>
	</div>
	<div class="field">
		<%= f.label :longitude %>
		<br>
		<%= f.text_field :longitude %>
	</div>
	<div class="actions">
		<%= image_submit_tag("spot_it_button.png", id: "search_submit") %>
	</div>
	<% end %>

	<%= link_to 'Back', searches_path %>
